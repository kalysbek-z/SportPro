<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sportsman_item_photo"
        android:layout_width="96dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sportsman" />

    <RelativeLayout
        android:id="@+id/sportsman_item_container"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#80474747">

        <TextView
            android:id="@+id/sportsman_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="Акматов Азамат Акматович"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sportsman_item_age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sportsman_item_name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="30 лет"
            android:textColor="#E5E5E5"
            android:textFontWeight="300"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_below="@id/sportsman_item_name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/sportsman_item_age_tv"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/sportsman_item_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sportsman_item_name_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/sportsman_item_age_tv"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="60 кг"
            android:textColor="#E5E5E5"
            android:textFontWeight="300"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sportsman_item_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sportsman_item_age_tv"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="Бишкек,"
            android:textColor="#E5E5E5"
            android:textFontWeight="300"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sportsman_item_organisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sportsman_item_age_tv"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/sportsman_item_city_tv"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="WorldClass"
            android:textColor="#E5E5E5"
            android:textFontWeight="300"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/comp_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:foreground="@drawable/image_shadow"
        android:scaleType="centerCrop"
        android:src="@drawable/news_sample_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comp_typeof_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0.8"
            android:background="@drawable/rounded_typeof_sport_background"
            android:fontFamily="@font/oswald"
            android:text="Таэквандо"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/comp_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:alpha="0.8"
            android:background="@drawable/rounded_comp_status_background"
            android:fontFamily="@font/oswald"
            android:text="Регистрация открыта"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/comp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/oswald"
            android:text="Открытое первенсто по Таэквандо"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comp_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:text="01.01.2021"
                android:textColor="@color/gray2"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_ellipse" />

            <TextView
                android:id="@+id/comp_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:text="01.01.2021"
                android:textColor="@color/gray2"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
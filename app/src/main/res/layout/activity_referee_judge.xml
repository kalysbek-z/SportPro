<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.Activities.RefereeCompetitionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/referee_judge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Назад"
        app:titleTextAppearance="@style/ToolBarAppearance"
        app:titleTextColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/referee_judge_pic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:foreground="@drawable/image_shadow"
            android:scaleType="centerCrop"
            android:src="@drawable/news_sample_img" />

        <TextView
            android:id="@+id/referee_judge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/oswald"
            android:text="Открытое первенсто по Таэквандо"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="132dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/referee_judge_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:text="01.01.2021"
                android:textColor="@color/gray2"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_ellipse" />

            <TextView
                android:id="@+id/referee_judge_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:text="01.01.2021"
                android:textColor="@color/gray2"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/referee_judge_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.01"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textFontWeight="700"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.01"
        android:text="Начало Судейства"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/referee_judge_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="Дата 12.01.2021"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/referee_judge_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.01"
            android:text="Время 12:00"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/referee_judge_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_red_btn"
        android:backgroundTint="#898989"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.06"
        android:text="Судить"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="16sp"
        android:textStyle="normal" />

</LinearLayout>